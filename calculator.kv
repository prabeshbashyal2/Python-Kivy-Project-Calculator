#: import utils kivy.utils
<MyLayout>
    data: data

    BoxLayout:
        orientation: "vertical"
        size: (root.width, root.height)

        TextInput:
            id: data
            multiline: False
            text: "0"
            halign: "right"
            font_size: 36
            size_hint: (1, .4)

        GridLayout:
            cols: 4
            rows: 5

            Button:
                size_hint: (.1, .1)
                text: "%"
                font_size: 30
                on_press: root.operator_sign('%')

            Button:
                size_hint: (.1, .1)
                text: "CE"
                font_size: 25
                on_press: root.delete()

            Button:
                size_hint: (.1, .1)
                text: "C"
                font_size: 25
                on_press: root.clear()

            Button:
                size_hint: (.1, .1)
                text: "/"
                font_size: 30
                on_press: root.operator_sign("/")

            Button:
                size_hint: (.1, .1)
                text: "7"
                font_size: 30
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(7)

            Button:
                size_hint: (.1, .1)
                text: "8"
                font_size: 30
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(8)

            Button:
                size_hint: (.1, .1)
                text: "9"
                font_size: 30
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(9)

            Button:
                size_hint: (.1, .1)
                text: "x"
                font_size: 30
                on_press: root.operator_sign("*")

            Button:
                size_hint: (.1, .1)
                text: "4"
                font_size: 30
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(4)

            Button:
                size_hint: (.1, .1)
                text: "5"
                font_size: 30
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(5)

            Button:
                size_hint: (.1, .1)
                text: "6"
                font_size: 30
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(6)

            Button:
                size_hint: (.1, .1)
                text: "+"
                font_size: 30
                on_press: root.operator_sign("+")

            Button:
                size_hint: (.1, .1)
                text: "1"
                font_size: 30
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(1)

            Button:
                size_hint: (.1, .1)
                text: "2"
                font_size: 30
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(2)

            Button:
                size_hint: (.1, .1)
                text: "3"
                font_size: 30
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(3)

            Button:
                size_hint: (.1, .1)
                text: "-"
                font_size: 30
                on_press: root.operator_sign("-")

            Button:
                size_hint: (.1, .1)
                text: "+/-"
                font_size: 25
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.plusminus()

            Button:
                size_hint: (.1, .1)
                text: "0"
                font_size: 30
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(0)


            Button:
                size_hint: (.1, .1)
                text: "."
                font_size: 30
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.point()

            Button:
                size_hint: (.1, .1)
                text: "="
                font_size: 30
                background_color: (0, 0, 1, 1)
                on_press: root.equal()


